<h1> WELCOME </h1>

<%= link_to 'ADD CUSTOMER',customers_add_customer_path%> <br><br>

<table border=2>
	<tr>
		<th> CUSTOMER NAME </th>
		<th> ADDRESS </th>
		<th> MOBILE NUMBER </th>
	</tr>
	<% @cs.each do |f| %>
	<tr>
		<td><%= f.c_name %></td>
		<td><%= f.address %></td>
		<td><%= f.mobile %></td>
		<td><%= link_to 'UPDATE', customers_change_path(f)%>
        <td><%= link_to 'DELETE', customers_cust_delete_path(f),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
	</tr>
	<%end%>
</table>