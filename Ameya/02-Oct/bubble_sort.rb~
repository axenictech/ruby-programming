/bubble sort/

class Sorting
	
	puts"Enter no. of element : "
	element=gets.to_i
	
	arr=[]
	
	for i in 1..element
			puts "Enter #{i} no. : "	
			no[i] = gets
	end

	puts "Array Before Sort : "

		for i in 1..element
			print no[i]
		end
	
		for i in 1..element

			for j in 1..element

				if no[i]<=no[j] #second array merged with first using swipping 

					temp=no[i]
					no[i]=no[j]
					no[j]=temp

				end	

			end

		end

			puts "Array after Sort : " 

		for i in 1..element
			print no[i]
		end
end