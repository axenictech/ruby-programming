<% if @laptops.empty? %>
<h3>No Records Found</h3>
<% else %>
<table border="2">

<tr>
	
	<th>First Name</th>
	<th>Last Name</th> 
	<th>Address</th>
	
	<th>Email</th>
	<th>Contact</th>
	
	<th>Country</th>
	<th></th>
	<th></th>
	<th></th>
	<th></th>
	

</tr>
<% @laptops.each do |l| %>
<tr>
	<td><%= l.fname %></td>
	<td><%= l.lname%></td>
	<td><%= l.address%></td>
	<td><%= l.email %></td>
	<td><%= l.phone %></td>
	<td><%= l.country %></td>
	<td><%= link_to 'Edit', edit_laptop_path(l)%></td>
	<td><%= link_to 'Delete',laptop_path(l),method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<td><%= link_to 'AddBank',new_laptop_bank_path(l),remote: true%></td>
	<td><%= link_to 'AllDetails' , new_laptop_bank_path(l)  %></td>
</tr>
<% end %>

</table>

<% end %>
